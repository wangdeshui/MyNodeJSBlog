<div class="panel panel-default">
    <div class="panel-heading">New
    Post</div>
    <div class="panel-body">
        <form class="form-horizontal" role="form" action="/post/edit/<%= id%>" method="post">

            <div class="form-group">
                <label for="title" class="col-sm-4 control-label">subject:</label>

                <div class="col-sm-8">
                    <input type="text" name="title" class="form-control" id="title" value="<%= title||''%>">
                </div>
            </div>

            <div class="form-group">
                <label for="summary" class="col-sm-4 control-label">summary:</label>

                <div class="col-sm-8">
                    <textarea id="summary" name="summary" class="form-control" rows="3" cols="10"><%= summary||""%></textarea>

                </div>
            </div>
            <div class="form-group">
                <label for="content" class="col-sm-4 control-label">content:</label>

                <div class="col-sm-8">
                    <textarea id="content" name="content" class="form-control" rows="10">
                        <%= content||''%>
                    </textarea>

                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-10">
                    <button type="submit" class="btn btn-lg btn-primary">Save</button>
                </div>
            </div>
        </form>

        <hr>
        <div id="comments">
            <ul class="list-unstyled">
                <% for(var i=0;i<(comments.length-1);i++){ %>

                <%- partial("shared/comment",comments[i])%>

                <%}%>
            </ul>
        </div>

    </div>


</div>