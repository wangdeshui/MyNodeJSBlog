        <div class="col-sm-9 panel panel-default" >

            <ul>
                <% for(post in posts){ %>
                <li>
                    <h3 class="lead"><a href='/post/<%= posts[post].id%>'> <%= posts[post].title %></a></h3>

                    <p><%- posts[post].summary %></p>
                </li>
                <% } %>
            </ul>
        </div>

        <%- include sidebar %>

    </div>


</div>


</div>


